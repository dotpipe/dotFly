{
  "name": "Task Manager",
  "version": "1.0.0",
  "description": "A simple task management application",
  "main": "index",
  "pages": {
    "index": "index.json",
    "console": "console.json",
    "tutorial_index": "pages/tutorial/tutorial_index.json",
    "overview": "pages/tutorial/overview.json",
    "inline_macros": "pages/tutorial/inline_macros.json",
    "ajax_pipes": "pages/tutorial/ajax_pipes.json",
    "tabs_demo": "pages/tutorial/tabs_demo.json",
    "csv_demo": "pages/tutorial/csv_demo.json",
    "carousel_demo": "pages/tutorial/carousel_demo.json",
    "modala_demo": "pages/tutorial/modala_demo.json",
    "advanced": "pages/tutorial/advanced.json"
  },
  "databases": [
    {
      "id": "tasks_db",
      "file": "tasks.csv",
      "columns": ["id", "title", "status", "priority", "due_date"]
    }
  ],
  "assets": [],
  "theme": {
    "color_primary": "#3498db",
    "color_success": "#27ae60",
    "color_danger": "#e74c3c",
    "font_family": "Segoe UI, Arial, sans-serif"
  },
  "settings": {
    "window_width": 1000,
    "window_height": 700,
    "resizable": true,
    "dev_tools": false
  },
  "storage": {
    "mode": "session",
    "persist": {
      "enabled": false,
      "paths": [],
      "global": false
    }
  }
}

