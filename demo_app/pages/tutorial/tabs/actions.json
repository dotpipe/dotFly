{
    "div": {
        "style": "padding: 20px; color: #ffffff;",
        "children": [
            {
                "h3": {
                    "style": "color: #00d9ff;",
                    "text": "ðŸŽ¯ Interactive Actions"
                }
            },
            {
                "p": {
                    "style": "color: #ffffff;",
                    "text": "Tabs can contain interactive elements with inline macros:"
                }
            },
            {
                "div": {
                    "style": "display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 10px; margin: 20px 0;",
                    "children": [
                        {
                            "button": {
                                "id": "tabAction1",
                                "inline": "|&msg:Action 1 triggered!|$tabActionOut.innerHTML:!msg",
                                "text": "Action 1",
                                "style": "padding: 15px;"
                            }
                        },
                        {
                            "button": {
                                "id": "tabAction2",
                                "inline": "|&msg:Action 2 executed!|$tabActionOut.innerHTML:!msg|tabActionOut.background:#00ff88",
                                "text": "Action 2",
                                "style": "padding: 15px;"
                            }
                        },
                        {
                            "button": {
                                "id": "tabAction3",
                                "inline": "|&msg:Action 3 complete!|$tabActionOut.innerHTML:!msg|tabActionOut.background:#ff3366",
                                "text": "Action 3",
                                "style": "padding: 15px;"
                            }
                        }
                    ]
                }
            },
            {
                "div": {
                    "id": "tabActionOut",
                    "style": "padding: 15px; background: #000000; border-radius: 3px; margin-top: 10px; border: 2px solid #00d9ff; color: #ffffff;",
                    "text": "Click buttons above to see actions..."
                }
            }
        ]
    }
}
