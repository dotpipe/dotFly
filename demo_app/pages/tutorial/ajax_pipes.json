                    ]
                }
            },

            {
                "h3": "âš™ï¸ Callbacks & Events"
            },
            {
                "div": {
                    "tagname": "div",
                    "class": "demo-box",
                    "children": [
                        {
                            "div": {
                                "tagname": "div",
                                "class": "demo-title",
                                "text": "Demo 5: Execute Callback After Load"
                            }
                        },
                        {
                            "p": {"textcontent": "Run a JavaScript function after AJAX completes using the callback attribute."}
                        },
                        {
                            "div": {
                                "tagname": "div",
                                "class": "code-block", "textContent": "&lt;pipe id=\"callbackLoader\"\n      ajax=\"/api/data.json\"\n      insert=\"callbackOut1\"\n      callback=\"onDataLoaded\">\n\n\n\nfunction onDataLoaded() {\n    alert('Data loaded successfully!');\n}\n"
                            }
                        },
                        {
                            "button": {
                                "tagname": "button",
                                "id": "callbackBtn",
                                "ajax": "http://chat.chessers.club/api/status.php:callbackOut1",
                                "callback": "onTutorialDataLoaded",
                                "textContent": "ðŸŽ¯ Load with Callback"
                            }
                        },
                        {
                            "div": {
                                "tagname": "div",
                                "id": "callbackOut1",
                                "class": "output-box",
                                "text": "Data will load here..."
                            }
                        },
                        {
                            "div": {
                                "tagname": "div",
                                "id": "callbackMsg",
                                "text": "Waiting for callback..."
                            }
                        },
                        {
                            "script": {
                                "text": "window.onTutorialDataLoaded = function() { document.getElementById('callbackMsg').innerHTML = 'âœ… Callback executed! Data loaded at ' + new Date().toLocaleTimeString() + ''; };"
                            }
                        }
                    ]
                }
            },

            {
