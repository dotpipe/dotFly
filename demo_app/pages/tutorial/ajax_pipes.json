                                        "children": [
                                            {"tagname": "td", "class": "code-block", "textContent": "json"},
                                            {"tagname": "td", "textcontent": "Format as JSON with syntax highlighting"}
                                        ]
                                    },
                                    {
                                        "tagname": "tr",
                                        "children": [
                                            {"tagname": "td", "class": "code-block", "textContent": "plain-text"},
                                            {"tagname": "td", "textcontent": "Display as plain text"}
